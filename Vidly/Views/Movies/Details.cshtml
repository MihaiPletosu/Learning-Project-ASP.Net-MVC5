@model Vidly.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul>
    <li>
        <span class="font-weight-bold">Genre: </span>
        <span>@Model.Genre.Name</span>
    </li>
    <li>
        <span class="font-weight-bold">Release Date: </span>
        <span>@Model.ReleaseDate.Value.ToLongDateString()</span>
    </li>
    <li>
        <span class="font-weight-bold">Date Added: </span>
        <span>@Model.DateAdded.Value.ToLongDateString()</span>
    </li>
    <li>
        <span class="font-weight-bold">Number in Stock: </span>
        <span>@Model.NumberInStock</span>
    </li>
</ul>